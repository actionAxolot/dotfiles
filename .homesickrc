require 'fileutils'
FileUtils.cd(File.expand_path("~/.vim")) do
	begin
		FileUtils.mkdir("bundle")
	rescue
		puts "bundle folder already exists"
	end
	FileUtils.cd("bundle") do
		begin
			system("git clone git@github.com-aparato:Shougo/neobundle.vim")
		rescue
			puts "Also, this has already been cloned"
		end
	end
end

# Now we need to clone oh-my-zsh
begin
	FileUtils.cd(File.expand_path("~")) do
		# Clone the repo
		system("git clone git@github.com-aparato:robbyrussell/oh-my-zsh.git .oh-my-zsh")
		system("chsh -s /bin/zsh")
	end
rescue
	puts "OH-MY-ZSH already configured"
end